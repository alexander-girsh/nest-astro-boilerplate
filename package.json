{
  "name": "nest-astro-boilerplate",
  "description": "nest and astro single repository boilerplate",
  "author": {
    "name": "Alexander Girsh"
  },
  "version": "0.0.2",
  "scripts": {
    "dev:backend": "nest start --config src/backend/nest-cli.json --watch",
    "dev:frontend": "astro dev --config src/frontend/astro.config.mjs",
    "test:backend:unit": "jest --config ./src/backend/test/jest.config.unit.mjs",
    "test:e2e:frontend:prepare": "export NODE_ENV=test && astro dev --config src/frontend/astro.config.mjs",
    "test:e2e:backend:prepare": "export NODE_ENV=test && nest start --config src/backend/nest-cli.json",
    "test:e2e:prepare": "export NODE_ENV=test && yarn run test:e2e:backend:prepare & yarn run test:e2e:frontend:prepare",
    "test:e2e:backend": "export NODE_ENV=test && yarn run jest --config ./src/backend/test/jest.config.e2e.mjs",
    "test:e2e:frontend": "export NODE_ENV=test && yarn run playwright test -c ./src/test.e2e/playwright.config.e2e.ts",
    "test:e2e": "yarn run test:e2e:backend && yarn run test:e2e:frontend",
    "test": "yarn run test:backend:unit && yarn run test:e2e",
    "lint": "export NODE_ENV=production && eslint -c .eslintrc.cjs --fix"
  },
  "dependencies": {
    "@grpc/proto-loader": "^0.7.7",
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/microservices": "^9.4.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.4.0",
    "@nestjs/websockets": "^9.4.0",
    "@types/pino": "^7.0.5",
    "@types/pino-pretty": "^5.0.0",
    "astro": "^2.4.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.3",
    "joi": "^17.9.2",
    "lodash": "^4.17.21",
    "nest-typed-config": "^2.5.2",
    "nestjs-pino": "^3.2.0",
    "pg": "^8.10.0",
    "pg-listen": "^1.7.0",
    "pino": "^8.14.1",
    "pino-http": "^8.3.3",
    "pino-pretty": "^10.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@playwright/test": "^1.33.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.5.0",
    "@types/joi": "^17.2.3",
    "@types/lodash": "^4.14.194",
    "@types/node": "18.15.11",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "astro-eslint-parser": "^0.13.3",
    "cypress": "^12.12.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-astro": "^0.27.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "29.5.0",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.5",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.0.4"
  }
}
